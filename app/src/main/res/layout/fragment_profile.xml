<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/purple_200"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                tools:src="@tools:sample/avatars"
                android:scaleType="centerCrop" />

            <!-- Profile Name and Edit Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billy Ricardo"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profileRole"
                    android:background="@drawable/role_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hipster"
                    android:textColor="@color/scorpion"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Edit Button -->
            <ImageView
                android:id="@+id/editProfileButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_next_24" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <!-- Menu Items -->
        <TextView
            android:id="@+id/uploadCV"
            style="@style/Textview_3"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_upload_cv"
            android:drawablePadding="8dp"
            android:text="@string/uploadCV"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/memel"
            style="@style/Textview_3"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_upload_cv"
            android:drawablePadding="8dp"
            android:text=""
            android:textSize="16sp" />

        <!-- Logout Button -->
        <TextView
            android:id="@+id/logoutButton"
            style="@style/Textview_3"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_logout"
            android:drawablePadding="8dp"
            android:text="@string/logout"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
